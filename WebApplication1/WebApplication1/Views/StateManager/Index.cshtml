@{
}

<div class="mt-5 p-5 border bg-secondary">
    <div class="display-6">State Manager</div>
    <div class="alert alert-warning">
        <p class="lead">
            ViewData -> @ViewData["Name"]
        </p>
        <p class="lead">
            Viewing -> @ViewBag.Counter
        </p>
        <p class="lead">
            Session Name: @Context.Session.GetString("Name")
        </p>
        <p class="lead">
            Session Counter : @Context.Session.GetInt32("Counter")
        </p>
    </div>
    <div class="bg-light mt-auto p-2">
        <a asp-action="Index" asp-route-id="1" asp-controller="StateManager"
            class="btn btn-lg btn-outline-success">Redirect to Index2</a>
        <a asp-action="Index" asp-route-id="0" asp-controller="StateManager"
            class="btn btn-lg btn-outline-danger">Refresh</a>

    </div>
</div>
